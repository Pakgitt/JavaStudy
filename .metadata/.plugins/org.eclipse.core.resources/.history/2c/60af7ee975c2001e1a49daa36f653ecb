package VariableExam;

import java.util.Scanner;

public class VariableP4 {
	public void method4() {
		
		//영어 문자열 값을 입력 받아 문자에서 앞에서 세 개를 출력하세요.
		Scanner sc = new Scanner(System.in);
		
		System.out.println("영단어를 입력하세요 : ");
		String str = sc.next();
		
		System.out.println(char (str));
		
		
		
	}
}
