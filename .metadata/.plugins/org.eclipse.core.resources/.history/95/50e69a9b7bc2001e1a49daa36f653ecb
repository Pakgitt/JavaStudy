package VariableExam;

import java.util.Scanner;

public class Run {
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("풀어볼 문제를 고르시오 : ");
		int choice = sc.nextInt();
		
		switch (choice) {
		case 1 :
			choice = 1;
			new VariableP1().method1();
			break;
		case 2 :
			choice = 2;
			new VariableP2().method2();
			break;
		case 3 : 
			choice = 3;
			new VariableP3().method3();
		case 4 : 
			choice = 4;
			new VariableP4().method4();
		default:
			System.out.println("문제는 4번까지 있습니다");
			break;
			System.out.println("다른 문제 풀어보기(9번 입력) : ");
		}
		
//		VariableP1 v1 = new VariableP1();
//		v1.method1();
//	
//		VariableP2 v2 = new VariableP2();
//		v2.method2();
//
//		VariableP3 v3 = new VariableP3();
//		v3.method3();
//		
//		VariableP4 v4 = new VariableP4();
//		v4.method4();

	}
}

